
<% if type == "new" %>
  <% action_url = cats_url %>
  <% button_text = 'Add Cat'%>
<% else %>
  <% action_url = cat_url(cat) %>
  <% button_text = 'Edit Cat Profile'%>
<% end %>


<form action="<%= action_url %>" method="POST">

  <% if type == "edit" %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>Name:
    <input type="text" name="cats[name]" value="<%= cat.name %>">
  </label>

  <label>Birthdate:
    <input type="date" name="cats[birth_date]" value="<%= cat.birth_date %>">
  </label>

  <label> Sex
    <select name="cats[sex]" value="<%= cat.sex %>" >
      <option value="M">M</option>
      <option value="F">F</option>
    </select>
  </label>




  <label >Choose a Color:
    <select name="cats[color]" value="<%= cat.color %>" >
      <option value="Brown">Brown</option>
      <option value="Black">Black</option>
      <option value="Gray">Gray</option>
      <option value="Orange">Orange</option>
    </select>
  </label>

   <label> Description
    <textarea  name="cats[description]" value="<%= cat.description %>"  > 
    </textarea>
  </label>



  <input type="submit" value=" <%= button_text %> ">

</form>