<form action="<%= album_tracks_url %>" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Title 
    <input type="text" name="track[title]">
  </label>
  <label>Track number
    <input type="number" name="track[ord]">
  </label>
  <label for="lyrics"></label>
  <textarea name="track[lyrics]" id="lyrics" cols="30" rows="10"></textarea>

   <p>Track type: </p>
    <input type="radio" id="regular" name="track[track_type]" value="regular" checked >
    <label for="regular">Regular</label><br>

    <input type="radio" id="bonus" name="track[track_type]" value="bonus">
    <label for="bonus">Bonus</label><br>


  <input type="submit" value="Create Track">

</form>